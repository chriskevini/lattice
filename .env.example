# Discord Configuration
DISCORD_TOKEN=your_bot_token_here
DISCORD_CONTROL_CHANNEL_ID=123456789012345678

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/lattice
DB_POOL_MIN_SIZE=2
DB_POOL_MAX_SIZE=5

# AI/ML Configuration
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
EMBEDDING_DIMENSION=384
EMBEDDING_CACHE_DIR=./models

# Memory Configuration
MAX_EPISODIC_CONTEXT_TURNS=10
VECTOR_SEARCH_LIMIT=5
SIMILARITY_THRESHOLD=0.7

# Proactive Behavior
DEFAULT_PROACTIVE_INTERVAL_MINUTES=120
DREAMING_CYCLE_CRON=0 3 * * *  # 3:00 AM daily

# Logging
LOG_LEVEL=INFO
STRUCTURED_LOGS=true

# Performance
MAX_WORKERS=2
REQUEST_TIMEOUT_SECONDS=30
