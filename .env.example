# ============================================================================
# DISCORD CONFIGURATION
# ============================================================================
DISCORD_TOKEN=your_bot_token_here
DISCORD_GUILD_ID=123456789012345678
DISCORD_MAIN_CHANNEL_ID=123456789012345678
DISCORD_DREAM_CHANNEL_ID=987654321098765432

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================
POSTGRES_USER=lattice
POSTGRES_PASSWORD=your_secure_password
POSTGRES_DB=lattice
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# ============================================================================
# AI/ML CONFIGURATION
# ============================================================================
LLM_PROVIDER=openrouter
OPENROUTER_API_KEY=sk-or-v1-xxxxx
OPENROUTER_MODEL=nvidia/nemotron-3-nano-30b-a3b:free

# ============================================================================
# ENVIRONMENT-SPECIFIC FLAGS
# ============================================================================
ENVIRONMENT=production
BOT_IMAGE=

# ============================================================================
# DUAL AGENT RESPONSE SYSTEM
# ============================================================================
# Enable dual-agent mode for parallel memory responses (default: false)
ENABLE_DUAL_AGENT_RESPONSE=false

# Lattice agent (semantic/triple-based memory)
LATTICE_AGENT_NAME=Lattice
LATTICE_AGENT_AVATAR=./avatars/lattice.png

# Vector agent (embedding/similarity-based memory)
VECTOR_AGENT_NAME=Vector
VECTOR_AGENT_AVATAR=./avatars/vector.png

# ============================================================================
# LOGGING
# ============================================================================
LOG_LEVEL=INFO
STRUCTURED_LOGS=true
