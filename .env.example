# ============================================================================
# DISCORD CONFIGURATION
# ============================================================================
DISCORD_TOKEN=your_bot_token_here
DISCORD_GUILD_ID=123456789012345678
DISCORD_MAIN_CHANNEL_ID=123456789012345678
DISCORD_DREAM_CHANNEL_ID=987654321098765432

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================
POSTGRES_USER=lattice
POSTGRES_PASSWORD=your_secure_password
POSTGRES_DB=lattice
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# ============================================================================
# AI/ML CONFIGURATION
# ============================================================================
LLM_PROVIDER=openrouter
OPENROUTER_API_KEY=sk-or-v1-xxxxx
OPENROUTER_MODEL=nvidia/nemotron-3-nano-30b-a3b:free

# ============================================================================
# ENVIRONMENT-SPECIFIC FLAGS
# ============================================================================
ENVIRONMENT=production
BOT_IMAGE=

# ============================================================================
# MEMORY SYSTEM CONFIGURATION
# ============================================================================
# Enable triple-based semantic memory (default: true)
ENABLE_TRIPLE_MEMORY=true

# Enable embedding-based semantic memory (default: false)
# When enabled with ENABLE_TRIPLE_MEMORY=true, uses dual-agent mode
ENABLE_EMBEDDING_MEMORY=false

# Embedding similarity threshold (0.0-1.0, higher = more restrictive)
EMBEDDING_SIMILARITY_THRESHOLD=0.7

# ============================================================================
# LOGGING
# ============================================================================
LOG_LEVEL=INFO
STRUCTURED_LOGS=true
